{
    "src_folders": [
        "tests/e2e"
    ],
    "output_folder": "reports",
    "custom_commands_path": "commands",
    "custom_assertions_path": "assertions",
    "page_objects_path": "",
    "globals_path": "tests/globalsModule.js",
    "selenium": {
        "start_process": false
    },
    "test_settings": {
        "default": {
            "selenium_port": 9515,
            "selenium_host": "localhost",
            "default_path_prefix": "",
            "silent": true,

            "screenshots": {
                "enabled": true,
                "on_failure": true,
                "on_error": true,
                "path": "results/screenshots"
            },

            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true,
                "chromeOptions": {
                    "args": [
                        "start-maximized"
                    ]
                }
            }
        },
        "chrome": {
            "desiredCapabilities": {
                "browserName": "chrome"
            }
        }
    }
}